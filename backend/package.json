{
  "name": "pizza-ecosystem-backend",
  "version": "1.0.0",
  "description": "Multi-tenant pizza ordering system backend",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "if [ -d dist/backend/src ]; then cp -r dist/backend/src/* dist/ 2>/dev/null || true; cp -r dist/shared dist/ 2>/dev/null || true; fi && if [ -f dist/shared/index.js ]; then sed -i '' 's/require(\"\\.\\/types\\/\\([^.]*\\)\\.types\")/require(\"\\\\.\\/types\\/\\1.types.js\")/g' dist/shared/index.js && sed -i '' 's/require(\"\\.\\/contracts\\/api-endpoints\")/require(\"\\\\.\\/contracts\\/api-endpoints.js\")/g' dist/shared/index.js; fi && find dist -name '*.js' -type f -exec sed -i '' 's|require(\"[^\"]*shared/index\\.ts\")|require(\"@pizza-ecosystem/shared\")|g' {} \\; && find dist -name '*.js' -type f -exec sed -i '' 's|require(\"[^\"]*shared/index\")|require(\"@pizza-ecosystem/shared\")|g' {} \\; && find dist -name '*.js' -type f -exec sed -i '' 's|require(\"\\.\\./shared\")|require(\"@pizza-ecosystem/shared\")|g' {} \\; && find dist -name '*.js' -type f -exec sed -i '' 's|require(\"\\.\\./\\.\\./shared\")|require(\"@pizza-ecosystem/shared\")|g' {} \\; && node fix-main.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run build && node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:studio": "prisma studio"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@adyen/api-library": "^30.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.3",
    "@types/passport-jwt": "^4.0.1",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "iterare": "^1.2.1",
    "libphonenumber-js": "^1.12.26",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "module-alias": "^2.2.3",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
