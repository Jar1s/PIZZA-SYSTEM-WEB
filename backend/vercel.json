{
  "version": 2,
  "buildCommand": "npm run prisma:generate && npm run build",
  "installCommand": "npm ci --include=dev && npx prisma generate",
  "outputDirectory": "dist",
  "framework": null,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "functions": {
    "api/index.ts": {
      "includeFiles": "prisma/**",
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
