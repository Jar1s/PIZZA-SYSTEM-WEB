generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
  // Include both musl (Alpine) and debian (Render.com) binaries built against OpenSSL 3
  // linux-musl-openssl-3.0.x for Alpine/Docker
  // debian-openssl-3.0.x for Render.com Debian runtime
  binaryTargets = ["linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String  @id @default(cuid())
  slug      String  @unique
  name      String
  domain    String? @unique
  subdomain String  @unique
  isActive  Boolean @default(true)

  // Payment provider
  paymentProvider String @default("adyen")
  
  // Currency (ISO 4217 code: EUR, CZK, USD, etc.)
  currency String @default("EUR")

  // JSON fields
  theme          Json
  paymentConfig  Json
  deliveryConfig Json

  // Relations
  products        Product[]
  orders          Order[]
  deliveries      Delivery[]
  productMappings ProductMapping[]
  deliveryZones   DeliveryZone[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tenants")
}

model Product {
  id       String @id @default(cuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  name         String
  description  String?
  priceCents   Int
  taxRate      Float   @default(20.0)
  category     String
  image        String?
  modifiers    Json?
  isActive     Boolean @default(true)
  isBestSeller Boolean @default(false)

  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId, isActive])
  @@index([tenantId, category])
  @@map("products")
}

model Order {
  id       String @id @default(cuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  status OrderStatus @default(PENDING)

  // User reference (can be null for guest orders)
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  // JSON fields
  customer Json
  address  Json

  // Pricing
  subtotalCents    Int
  taxCents         Int
  deliveryFeeCents Int
  totalCents       Int

  // References
  paymentRef      String?
  paymentStatus   String?
  deliveryId      String?
  delivery        Delivery? @relation(fields: [deliveryId], references: [id])
  storyousOrderId String?

  items OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId, status])
  @@index([tenantId, createdAt]) // Performance: Optimizes queries sorted by date
  @@index([paymentRef])
  @@index([userId])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  PAID
  PREPARING
  READY
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELED
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  productName String // Snapshot
  quantity    Int
  priceCents  Int
  modifiers   Json?

  @@map("order_items")
}

model Delivery {
  id       String @id @default(cuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  provider    String  @default("wolt")
  jobId       String?
  status      String
  trackingUrl String?
  quote       Json?

  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([jobId])
  @@map("deliveries")
}

enum UserRole {
  ADMIN
  OPERATOR
  CUSTOMER
}

model User {
  id            String   @id @default(cuid())
  username      String?  @unique // Optional for customers (they use email)
  password      String? // Optional for OAuth users
  name          String
  email         String?  @unique // Email for customer login
  googleId      String?  @unique // Google OAuth ID
  appleId       String?  @unique // Apple OAuth ID
  phone         String?  @unique // Phone number for SMS verification
  phoneVerified Boolean  @default(false) // Whether phone is verified
  role          UserRole @default(OPERATOR)
  isActive      Boolean  @default(true)
  
  // Password reset token for account setup
  passwordResetToken      String?  @unique
  passwordResetExpires    DateTime?

  refreshTokens        RefreshToken[]
  smsVerificationCodes SmsVerificationCode[]
  addresses            Address[] // Customer addresses
  orders               Order[] // Customer orders

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([username])
  @@index([email])
  @@index([phone])
  @@index([passwordResetToken])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  isRevoked Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model SmsVerificationCode {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  phone     String // Phone number (can be used before user exists)
  code      String // 6-digit verification code
  expiresAt DateTime // Code expires in 10 minutes
  isUsed    Boolean  @default(false)
  attempts  Int      @default(0) // Number of verification attempts

  createdAt DateTime @default(now())

  @@index([phone])
  @@index([code])
  @@index([expiresAt])
  @@map("sms_verification_codes")
}

model Address {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  street      String
  description String? // Apartment number, floor, entrance
  city        String
  postalCode  String
  country     String  @default("SK")
  isPrimary   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, isPrimary])
  @@map("addresses")
}

// Mapovanie externých názvov/kódov na interné názvy produktov
model ProductMapping {
  id       String @id @default(cuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Externý identifikátor (môže byť kód alebo názov)
  externalIdentifier String // Napr. "#69", "Hawaii Premium", "Hawaiian"

  // Interný názov produktu (ako je v databáze)
  internalProductName String // Napr. "Hawaii"

  // Voliteľne: zdroj (napr. "website1", "website2")
  source String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, externalIdentifier, source])
  @@index([tenantId, externalIdentifier])
  @@index([internalProductName])
  @@map("product_mappings")
}

model DeliveryZone {
  id       String @id @default(cuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  name            String  // ZONA1, ZONA2, ZONA3, atď.
  deliveryFeeCents Int    // Cena dopravy v centoch (100 = 1€)
  minOrderCents    Int?   // Minimálna objednávka v centoch (3000 = 30€), null = žiadne minimum
  
  // Mapovanie adries na zónu - môže byť podľa PSČ, mesta, alebo časti mesta
  postalCodes      String[] // Zoznam PSČ (napr. ["81101", "81102"])
  cityNames        String[] // Zoznam názvov miest/častí (napr. ["Jarovce", "Staré Mesto"])
  cityParts        String[] // Zoznam častí mesta (napr. ["Jarovce", "Petržalka"])
  
  isActive         Boolean @default(true)
  priority         Int     @default(0) // Vyššia priorita = skoršie kontrolovanie (pre presnejšie zóny)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId, isActive])
  @@index([tenantId, name])
  @@map("delivery_zones")
}
